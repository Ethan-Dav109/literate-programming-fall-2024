{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build",
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "label": "rust: cargo test",
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        }
    ]
}
